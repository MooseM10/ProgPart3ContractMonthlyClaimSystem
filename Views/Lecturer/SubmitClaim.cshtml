@model ContractMonthlyClaimSystem.Models.Claim

<h2>Submit a Claim</h2>

<form asp-action="SubmitClaim" method="post">
    <div>
        <label for="hoursWorked">Hours Worked:</label>
        <input type="number" id="hoursWorked" name="HoursWorked" required />
    </div>
    <div>
        <label for="hourlyRate">Hourly Rate:</label>
        <input type="number" id="hourlyRate" name="HourlyRate" step="0.01" required />
    </div>
    <button type="submit">Submit</button>
</form>
