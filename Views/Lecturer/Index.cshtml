<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.7/signalr.min.js"></script>
<script>
    const connection = new signalR.HubConnectionBuilder().withUrl("/claimHub").build();
    connection.on("ReceiveStatusUpdate", function () {
        location.reload();
    });
    connection.start();
</script>

@model IEnumerable<ContractMonthlyClaimSystem.Models.Claim>


<h2>Submit a Claim</h2>

<form asp-action="SubmitClaim" method="post">
    <div>
        <label for="hoursWorked">Hours Worked:</label>
        <input type="number" id="hoursWorked" name="HoursWorked" required />
    </div>
    <div>
        <label for="hourlyRate">Hourly Rate:</label>
        <input type="number" id="hourlyRate" name="HourlyRate" step="0.01" required />
    </div>
    <button type="submit">Submit</button>
</form>

